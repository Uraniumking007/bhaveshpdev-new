generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model User {
  id            String    @id
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String
  username      String    @unique
  isAdmin       Boolean   @default(false)

  @@schema("public")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@schema("public")
}

model Projects {
  id               String           @id @db.Uuid
  name             String
  description      String
  image            String
  link             String
  github           String
  tech             String[]
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  projectInitiated DateTime
  projectCompleted projectCompleted

  @@schema("public")
}

enum projectCompleted {
  String
  DateTime

  @@schema("public")
}
